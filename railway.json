{
  "build": {
    "use": "@railway/php",
    "variables": {
      "NODE_VERSION": "18"
    },
    "commands": [
      "composer install --no-interaction --prefer-dist --optimize-autoloader",
      "npm install",
      "npm run build",
      "php artisan storage:link",
      "chmod -R 775 storage bootstrap/cache"
    ]
  },
  "deploy": {
    "startCommand": "php artisan migrate --force && php -S 0.0.0.0:${PORT} -t public"
  }
}